<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= movie.genre %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Director:</strong>
    <%= movie.director %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= movie.release_date %>
  </p>

  <p>
    <strong>Run time:</strong>
    <%= movie.run_time %>
  </p>

  <p>
    <strong>Production company:</strong>
    <%= movie.production_company %>
  </p>

  <p>
    <strong>Review:</strong>
    <%= movie.review %>
